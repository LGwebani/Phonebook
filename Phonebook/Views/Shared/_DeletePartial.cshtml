<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
                <button type="button" class="close" data-bind="click: $root.closeCreateEditDelete;" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/images/ajax-loader.gif" alt="ajax-loader" class="ajax-loader center-ajax-image invisible" />
                <p>Are you sure you want to delete <b data-bind="text: $root.currentItem().name"></b></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: $root.deleteItem">Yes</button>
                <button type="button" class="btn btn-secondary" data-bind="click: $root.closeCreateEditDelete;" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>